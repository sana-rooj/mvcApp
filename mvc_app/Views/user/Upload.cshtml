@model mvc_app.Models.UserModel
@{
    ViewData["Title"] = "Upload";
}
<input type="button" class="btn-primary" style="float:right;" value="Create" onclick="location.href='@Url.Action("userpage", "User")'" />
<div><h3>Users Data</h3></div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>

            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Comments</th>
            <th scope="col">Choices</th>
            <th scope="col">File</th>
        </tr>
    </thead>
    <tbody>
        <tr>

            <td>@Model.Name</td>
            <td>@Model.Email</td>
            <td>@Model.Comments</td>
            <td>@Model.Choice</td>
            <td><a href="@Url.Action("DownloadDiffFiles", "user", new {FileToDownload =  @Model.FileNames}) ">@Model.FileNames</a></td>



        </tr>

    </tbody>
</table>

<input type="button" class="btn-primary" style="float:right;" value="Create" onclick="location.href='@Url.Action("ShowData", "User")'" />



