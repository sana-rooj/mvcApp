@model IEnumerable<mvc_app.Models.UserModel>

@{
    ViewData["Title"] = "ShowData";
}
<body>
    <button class="btn-success" style="float:right;" onclick="location.href='@Url.Action("OrderMainPageAsync", "UserOrders")'"><span class="glyphicon glyphicon-shopping-cart"></span>  Place Order</button>
    <input type="button" class="btn-primary" style="float:right;" value="+ Create Account" onclick="location.href='@Url.Action("userpage", "User")'" />
    <div><h3>Users Data</h3></div>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th onclick="location.href='@Url.Action("ShowData", "User",new {sort  = "Id", pageno=@ViewBag.PageToLoad})'">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th onclick="location.href='@Url.Action("ShowData", "User",new {sort  = "Name", pageno=@ViewBag.PageToLoad})'">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th onclick="location.href='@Url.Action("ShowData", "User",new {sort  = "Email", pageno=@ViewBag.PageToLoad})'">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th onclick="location.href='@Url.Action("ShowData", "User",new {sort  = "Comments", pageno=@ViewBag.PageToLoad})'">
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
                <th onclick="location.href='@Url.Action("ShowData", "User",new {sort  = "Choice", pageno=@ViewBag.PageToLoad})'">
                    @Html.DisplayNameFor(model => model.Choice)
                </th>
                <th onclick="location.href='@Url.Action("ShowData", "User",new {sort  = "FileNames", pageno=@ViewBag.PageToLoad})'">
                    @Html.DisplayNameFor(model => model.FileNames)
                </th>
                <th>
                    Download link @ViewBag.PageCount
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Choice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileNames)
                    </td>
                    <td><a href="@Url.Action("DownloadDiffFiles", "user", new {FileToDownload =   item.FileNames}) ">@item.FileNames</a></td>
                    <td>
                        @Html.ActionLink("Edit", "EditUser", new { id = item.Id }) |
                        @Html.ActionLink("Delete User", "DeleteUser", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @for (int i = 1; i < (@ViewBag.PageCount / 3); i++)
            {

                <li class="page-item"><a class="page-link" href="@Url.Action("ShowData", "user", new {pageno = @i})">@i</a></li>
            }
            @*<li class="page-item"><a class="page-link" href="@Url.Action("ShowData", "user", new {pageno = 1})">1</a></li>
                <li class="page-item"><a class="page-link" href="@Url.Action("ShowData", "user", new {pageno = 2})">2</a></li>
                <li class="page-item"><a class="page-link" href="@Url.Action("ShowData", "user", new {pageno = 3})">3</a></li>*@
        </ul>
    </nav>
    
   

</body>